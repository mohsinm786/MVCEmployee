@model List<EmployeeModel>

<h1>Employee List</h1>

<div class="mb-3">
    <a id="addEmployee" data-toggle="modal" data-target="#addEmployeeModal" class="btn btn-success">Add</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.Gender</td>
                <td>@employee.Salary</td>
                <td>
                    <button class="btn btn-primary view-details-btn" data-id="@employee.Id">View Details</button>
                    <a data-toggle="modal" data-target="#addEmployeeModal" class="btn btn-warning updateEmployee" data-id="@employee.Id">Edit</a>
                    <button class="btn btn-danger delete-btn" data-id="@employee.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal for adding/editing employee -->
<div class="modal fade" id="addEmployeeModal" tabindex="-1" role="dialog" aria-labelledby="addEmployeeModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addEmployeeModalLabel">Employee Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="employeeForm">
                    <input type="hidden" id="employeeId" />
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <input type="text" class="form-control" id="firstName" name="firstName" maxlength="50" required />
                        <span class="text-danger" id="firstNameError"></span>
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input type="text" class="form-control" id="lastName" name="lastName" maxlength="50" required />
                        <span class="text-danger" id="lastNameError"></span>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" maxlength="50" />
                        <span class="text-danger" id="emailError"></span>
                    </div>
                    <div class="form-group">
                        <label for="gender">Gender</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="maleGender" value="M">
                            <label class="form-check-label" for="maleGender">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="femaleGender" value="F">
                            <label class="form-check-label" for="femaleGender">Female</label>
                        </div>
                        <span class="text-danger" id="genderError"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="maritalStatus" name="maritalStatus" value="true">
                            <label class="form-check-label" for="maritalStatus">Are you married?</label>
                        </div>
                        <span class="text-danger" id="maritalStatusError"></span>
                    </div>
                    <div class="form-group">
                        <label for="birthDate">Birth Date</label>
                        <input type="date" class="form-control" id="birthDate" name="birthDate" />
                        <span class="text-danger" id="birthDateError"></span>
                    </div>
                    <div class="form-group">
                        <label for="hobbies">Hobbies</label>
                        <input type="text" class="form-control" id="hobbies" name="hobbies" maxlength="100" />
                        <span class="text-danger" id="hobbiesError"></span>
                    </div>
                    <div class="form-group">
                        <label for="salary">Salary</label>
                        <input type="number" class="form-control" id="salary" name="salary" min="5000" step="any" />
                        <span class="text-danger" id="salaryError"></span>
                    </div>
                    <div class="form-group">
                        <label for="address">Address</label>
                        <textarea class="form-control" id="address" name="address" maxlength="500"></textarea>
                        <span class="text-danger" id="addressError"></span>
                    </div>
                    <div class="form-group">
                        <label for="country">Country</label>
                        <select class="form-control" id="country" name="country">
                            <!-- Populate options dynamically or hardcode them -->
                        </select>
                        <span class="text-danger" id="countryError"></span>
                    </div>
                    <div class="form-group">
                        <label for="state">State</label>
                        <select class="form-control" id="state" name="state">
                            <!-- Populate options dynamically or hardcode them -->
                        </select>
                        <span class="text-danger" id="stateError"></span>
                    </div>
                    <div class="form-group">
                        <label for="city">City</label>
                        <select class="form-control" id="city" name="city">
                            <!-- Populate options dynamically or hardcode them -->
                        </select>
                        <span class="text-danger" id="cityError"></span>
                    </div>
                    <div class="form-group">
                        <label for="zipCode">Zip Code</label>
                        <input type="text" class="form-control" id="zipCode" name="zipCode" maxlength="6" />
                        <span class="text-danger" id="zipCodeError"></span>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[^\da-zA-Z]).{8,16}$" title="Password must be 8-16 characters long and contain at least one uppercase letter, one number, and one special character." required />
                        <span class="text-danger" id="passwordError"></span>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveEmployeeBtn">Save</button>
            </div>
        </div>
    </div>
</div>


<div id="employee-details-container"></div>

<script>
    $(document).ready(function () {
        $('.view-details-btn').click(function () {
            var employeeId = $(this).data('id');
            @* $.get("/Employee/EmployeeDetails/" + employeeId, function (data) {
                $('#employee-details-container').html(data);
            }); *@
            $.ajax({
                url: '/Employee/EmployeeDetails/',
                type: 'GET',
                data: { id: employeeId },
                success: function (result) {
                    $('#employee-details-container').html(result);
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        });

        $('#addEmployee').click(function () {
            $('#addEmployeeModal').modal('show');
        });
        $('.updateEmployee').click(function () {
            $('#addEmployeeModal').modal('show');
        });

        $('#saveEmployeeBtn').click(function (e) {
            var formData = $('#employeeForm').serialize();
            e.preventDefault();

            $.ajax({
                url: '/Employee/AddEmployeeAsync/',
                type: 'POST',
                data: formData,
                success: function (response) {
                    if (response.success) {
                        // Optionally, you can perform some action upon successful addition
                        alert('Employee added successfully');
                        $('#addEmployeeModal').modal('hide');
                    } else {
                        // Handle errors if any
                        alert('Failed to add employee');
                    }
                },
                error: function () {
                    alert('Error occurred while adding employee');
                }
            });
        });

        $('.delete-btn').click(function () {
            var employeeId = $(this).data('id');
            var deleteButton = $(this);

            if (confirm("Are you sure you want to delete this employee?")) {
                $.ajax({
                    url: '/Home/DeleteEmployee',
                    type: 'DELETE',
                    data: { id: employeeId },
                    success: function (result) {
                        console.log("Employee deleted successfully");
                        deleteButton.closest('tr').remove();
                    },
                    error: function (xhr, status, error) {
                        console.error(xhr.responseText);
                    }
                });
            }
        });

    }); 
</script>
